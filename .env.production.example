# PRODUCTION Environment Configuration
# CRITICAL: Review and update ALL values before deploying to production

# SECURITY WARNING: Generate a NEW SECRET_KEY for production!
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY

# SECURITY WARNING: MUST be False in production!
DEBUG=False

# Comma-separated list of allowed hosts (your production domains)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# PostgreSQL Database Configuration (REQUIRED for production)
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=profitrider
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_db_password
DATABASE_HOST=your-db-host.com
DATABASE_PORT=5432

# Google OAuth Configuration (Production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://yourdomain.com

# CORS Configuration (Production frontend URL)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Settings (MUST be True in production with HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# Stripe Configuration (Production keys - NEVER commit to version control)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret
STRIPE_DOMAIN=https://yourdomain.com

# Rate Limiting
RATELIMIT_ENABLE=True
